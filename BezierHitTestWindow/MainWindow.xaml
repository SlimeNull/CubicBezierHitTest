<Window x:Class="BezierHitTestWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BezierHitTestWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <local:BezierCurve x:Name="bezierCurve"
                           Background="Transparent"
                           MouseDown="bezierCurve_MouseDown"
                           MouseMove="bezierCurve_MouseMove"
                           MouseUp="bezierCurve_MouseUp"
                           MouseWheel="bezierCurve_MouseWheel"/>
    </Grid>
</Window>
